<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="66dp"
            android:layout_height="64dp" android:id="@+id/txtTotalCount"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="94dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="573dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="78dp" app:layout_constraintEnd_toStartOf="@+id/btnResetAll"
            android:layout_marginEnd="38dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="66dp"
            android:layout_height="54dp" android:id="@+id/txtCounterTop"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalCount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" app:layout_constraintEnd_toStartOf="@+id/btnPlusOneTop"
            android:layout_marginEnd="33dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCounterUpper"/>
    <TextView
            android:text="TextView"
            android:layout_width="66dp"
            android:layout_height="54dp" android:id="@+id/txtCounterLower"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" app:layout_constraintEnd_toStartOf="@+id/btnPlusOneLower"
            android:layout_marginEnd="33dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCounterBottom"/>
    <TextView
            android:text="TextView"
            android:layout_width="66dp"
            android:layout_height="54dp" android:id="@+id/txtCounterBottom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="171dp" app:layout_constraintEnd_toStartOf="@+id/btnPlusOneBottom"
            android:layout_marginEnd="34dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="66dp"
            android:layout_height="54dp" android:id="@+id/txtCounterUpper"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCounterLower"
            app:layout_constraintEnd_toStartOf="@+id/btnPlusOneUpper" android:layout_marginEnd="34dp"/>
    <Button
            android:text="@string/resetAll"
            android:layout_width="179dp"
            android:layout_height="60dp" android:id="@+id/btnResetAll"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="98dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="573dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/plusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlusOneTop"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/btnResetAll" app:layout_constraintEnd_toStartOf="@+id/btnResetTop"
            android:layout_marginEnd="28dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlusOneUpper"/>
    <Button
            android:text="@string/plusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlusOneUpper"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlusOneLower"
            app:layout_constraintEnd_toStartOf="@+id/btnResetUpper" android:layout_marginEnd="26dp"/>
    <Button
            android:text="@string/plusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlusOneLower"
            android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPlusOneBottom"
            app:layout_constraintEnd_toStartOf="@+id/btnResetLower" android:layout_marginEnd="27dp"/>
    <Button
            android:text="@string/plusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlusOneBottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="171dp" app:layout_constraintEnd_toStartOf="@+id/btnResetBottom"
            android:layout_marginEnd="27dp"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnResetTop"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/btnResetAll" android:layout_marginEnd="41dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnResetUpper"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnResetUpper"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/btnResetLower" android:layout_marginEnd="42dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnResetLower"
            android:layout_marginEnd="42dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/btnResetBottom"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnResetBottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="171dp" android:layout_marginEnd="41dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>